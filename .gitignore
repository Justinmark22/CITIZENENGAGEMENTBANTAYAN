# =========================================
# Laravel default ignores
# =========================================
/vendor
/node_modules
/.phpunit.cache
/public/build
/public/hot
/.env
/.env.*
Homestead.json
Homestead.yaml
npm-debug.log
yarn-error.log
/.idea
/.vscode

# =========================================
# Ignore all storage except public/reports
# =========================================
/storage/*
!/storage/app/
!/storage/app/public/
!/storage/app/public/reports/**

# =========================================
# Ignore Laravel log, cache, and framework files
# =========================================
/storage/framework/*
/storage/logs/*

# =========================================
# Optional: ignore symlink (public/storage)
# =========================================
!/public/storage
