# ======================================================
# ðŸ”’ Laravel Root Security (.htaccess)
# ======================================================
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect all requests to the public folder
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# ======================================================
# ðŸš« Protect Sensitive Files & Folders
# ======================================================
<FilesMatch "(^\.|composer\.json|composer\.lock|artisan|server\.php|.env|.env.*|.git|.htaccess|storage|vendor|node_modules)">
    Order allow,deny
    Deny from all
</FilesMatch>

# ======================================================
# ðŸ§± Prevent Access to Config, Logs, and Cache
# ======================================================
<DirectoryMatch "(app|bootstrap|config|database|resources|routes|storage|tests|vendor)">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# ======================================================
# ðŸš« Disable Directory Listing
# ======================================================
Options -Indexes

# ======================================================
# ðŸ§° Security Headers
# ======================================================
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"

    # Prevent clickjacking (X-Frame)
    Header always set X-Frame-Options "SAMEORIGIN"

    # Stronger frame protection using Content Security Policy
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-hashes'; img-src 'self' data:; font-src 'self'; connect-src 'self'; frame-ancestors 'self';"

    # Prevent some XSS attacks
    Header set X-XSS-Protection "1; mode=block"

    # Enforce HTTPS
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Hide server info
    Header unset X-Powered-By
</IfModule>

# ======================================================
# ðŸ§¨ Block Dangerous File Extensions
# ======================================================
<FilesMatch "\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist|pem|key)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ======================================================
# ðŸ§¯ Disable PHP Execution in Storage, Bootstrap, and Vendor
# ======================================================
<Directory "/home/yourusername/bantayan911.com/storage">
    php_flag engine off
</Directory>

<Directory "/home/yourusername/bantayan911.com/bootstrap">
    php_flag engine off
</Directory>

<Directory "/home/yourusername/bantayan911.com/vendor">
    php_flag engine off
</Directory>
