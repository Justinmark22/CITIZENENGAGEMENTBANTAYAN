<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        # Disable directory listing and MultiViews
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On
    RewriteBase /

    # ===================================================
    # ðŸ”’ OPTIONAL: Redirect all to HTTPS (uncomment if using SSL)
    # ===================================================
    # RewriteCond %{HTTPS} !=on
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Handle Authorization Header (for API / Sanctum / Passport)
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send All Requests To Laravel's Front Controller
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ===================================================
# ðŸ§± SECURITY HEADERS
# ===================================================
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
</IfModule>

# ===================================================
# ðŸš« BLOCK SENSITIVE FILES
# ===================================================
<FilesMatch "(\.env|artisan|composer\.(json|lock)|server\.php|package\.json|webpack\.mix\.js|vite\.config\.js|.htaccess|.htpasswd)$">
    Require all denied
</FilesMatch>

# Block access to private Laravel directories (if deployed incorrectly)
RedirectMatch 403 ^/(vendor|storage|bootstrap|config|database|resources|routes)/

# Disable directory browsing
Options -Indexes

# Prevent PHP execution in storage and uploads folders
<IfModule mod_php.c>
    <FilesMatch "^storage/.*\.php$">
        Require all denied
    </FilesMatch>
    <FilesMatch "^uploads/.*\.php$">
        Require all denied
    </FilesMatch>
</IfModule>

# Disable execution of PHP files in .git or .svn directories if any
RedirectMatch 403 /\.git
RedirectMatch 403 /\.svn
