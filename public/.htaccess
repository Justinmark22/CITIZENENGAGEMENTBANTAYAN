# ======================================================
# üöÄ Laravel Public Directory .htaccess (Hardened & Tailwind-Friendly)
# ======================================================
<IfModule mod_rewrite.c>
    RewriteEngine On

    # ==================================================
    # üîÅ Redirect Trailing Slashes (except folders)
    # ==================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # ==================================================
    # üîê Pass Authorization Header (for API/Auth)
    # ==================================================
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ==================================================
    # üö¶ Route All Requests To index.php
    # ==================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ======================================================
# ‚úÖ Allow Public Assets (CSS/JS/Fonts/Images)
# ======================================================
<FilesMatch "\.(css|js|map|woff|woff2|ttf|eot|svg|jpg|jpeg|png|gif|webp|pdf|txt)$">
    Require all granted
</FilesMatch>

# ======================================================
# üß± Block Access To Hidden Files (.env, .git, etc.)
# ======================================================
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# ======================================================
# üö´ Block Sensitive Files & Directories
# ======================================================
<FilesMatch "(^\.|composer\.json|composer\.lock|artisan|server\.php|.env|.env.*|.git|.htaccess|bootstrap|config|database|resources|routes|tests|vendor)">
    Require all denied
</FilesMatch>

# ======================================================
# ‚úÖ Storage Access Configuration (Allow all)
# ======================================================
<IfModule mod_alias.c>
    Options +FollowSymLinks
</IfModule>

<Directory "storage">
    Options +FollowSymLinks
    AllowOverride None
    Require all granted
</Directory>

<Directory "public/storage">
    Options +FollowSymLinks
    AllowOverride None
    Require all granted
</Directory>

# Explicit storage rule for images/docs
RewriteRule ^storage/(.*)$ storage/$1 [L]

# ======================================================
# üß∞ Add Strong Security Headers (no duplicates)
# ======================================================
<IfModule mod_headers.c>
    Header always unset X-Frame-Options
    Header set X-Frame-Options "SAMEORIGIN"

    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header unset X-Powered-By
    Header set Referrer-Policy "no-referrer-when-downgrade"
    Header set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self'; font-src 'self';"
</IfModule>

# ======================================================
# üß® Block Dangerous File Extensions (except allowed images/docs)
# ======================================================
<FilesMatch "\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist|pem|key|env|gz|zip|rar|phar)$">
    Require all denied
</FilesMatch>

# ======================================================
# ‚ö° Force HTTPS
# ======================================================
<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# ======================================================
# üßπ Disable Directory Browsing
# ======================================================
Options -Indexes

# ======================================================
# üîí Block Common Exploit Patterns (SQLi, LFI, RCE)
# ======================================================
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} (\.\./|\.\.\\) [NC,OR]
    RewriteCond %{QUERY_STRING} (union|select|insert|cast|drop|update|delete|benchmark|sleep)\( [NC]
    RewriteRule ^ - [F,L]
</IfModule>
