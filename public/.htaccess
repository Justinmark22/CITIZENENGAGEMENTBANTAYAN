# ======================================================
# üöÄ Laravel Public Directory .htaccess (Secure + Public Storage Access)
# ======================================================
<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        # Disable MultiViews & Directory Listing
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On
    RewriteBase /

    # ==================================================
    # üîÅ Redirect Trailing Slashes (except folders)
    # ==================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # ==================================================
    # üîê Pass Authorization Header (for API/Auth)
    # ==================================================
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ==================================================
    # üö¶ Route All Requests To index.php
    # ==================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ======================================================
# üß± Block Access To Hidden Files (.env, .git, etc.)
# ======================================================
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# ======================================================
# üö´ Block Sensitive Files & Directories
# ======================================================
<FilesMatch "(^\.|composer\.json|composer\.lock|artisan|server\.php|.env|.env.*|.git|.htaccess|bootstrap|config|database|resources|routes|tests|vendor)">
    Require all denied
</FilesMatch>

# ======================================================
# ‚úÖ Storage Access Configuration
# ======================================================
<IfModule mod_alias.c>
    Options +FollowSymLinks
</IfModule>

# Configure storage directory
<Directory "storage">
    Options +FollowSymLinks
    AllowOverride None
    Require all granted
    
    # Disable PHP execution in storage
    <FilesMatch "\.php$">
        Require all denied
    </FilesMatch>
    
    # Allow common image formats
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
        Require all granted
        Header set Cache-Control "max-age=31536000"
    </FilesMatch>
</Directory>

# Explicitly allow access to storage symlink
<Directory "public/storage">
    Options +FollowSymLinks
    AllowOverride None
    Require all granted

    # Allow common image formats with caching
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
        Require all granted
        Header set Cache-Control "max-age=31536000"
    </FilesMatch>
</Directory>

# Special rule for storage access
RewriteRule ^storage/(.*)\.(jpg|jpeg|png|gif|webp|svg)$ storage/$1.$2 [L]

# ======================================================
# üß∞ Add Strong Security Headers
# ======================================================
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header always append X-Frame-Options SAMEORIGIN
    Header set X-XSS-Protection "1; mode=block"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    Header unset X-Powered-By
    Header set Content-Security-Policy "default-src 'self' https: data: 'unsafe-inline' 'unsafe-eval';"
</IfModule>

# ======================================================
# üß® Block Dangerous File Extensions (except images/docs)
# ======================================================
<FilesMatch "\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist|pem|key|env|gz|zip|rar)$">
    Require all denied
</FilesMatch>

# ======================================================
# ‚ö° Optional: Force HTTPS
# ======================================================
<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# ======================================================
# üßπ Disable Directory Browsing
# ======================================================
Options -Indexes
