# ======================================================
# üöÄ Laravel Public Directory .htaccess
# ======================================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Allow direct access to storage files
    RewriteCond %{REQUEST_URI} !^/storage
    RewriteCond %{REQUEST_URI} !^/public/storage

    # ==================================================
    # üîÅ Redirect Trailing Slashes (except folders)
    # ==================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # ==================================================
    # üîê Pass Authorization Header (for API/Auth)
    # ==================================================
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ==================================================
    # üö¶ Route All Requests To index.php
    # ==================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ======================================================
# üß± Block Access To Hidden Files (.env, .git, etc.)
# ======================================================
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# ======================================================
# üö´ Block Sensitive Files & Directories
# ======================================================
<FilesMatch "(^\.|composer\.json|composer\.lock|artisan|server\.php|.env|.env.*|.git|.htaccess|bootstrap|config|database|resources|routes|tests|vendor)">
    Require all denied
</FilesMatch>

# ======================================================
# ‚úÖ Storage Access Configuration
# ======================================================
<IfModule mod_alias.c>
    Options +FollowSymLinks
</IfModule>

# Configure storage directory
<Directory "storage">
    Options +FollowSymLinks
    AllowOverride None
    Require all granted
    
    # Disable PHP execution in storage
    <FilesMatch "\.php$">
        Require all denied
    </FilesMatch>
    
    # Allow common image formats
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
        Require all granted
        Header set Cache-Control "max-age=31536000"
    </FilesMatch>
</Directory>

# Explicitly allow access to storage symlink
<Directory "public/storage">
    Options +FollowSymLinks
    AllowOverride None
    Require all granted

    # Allow common image formats with caching
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
        Require all granted
        Header set Cache-Control "max-age=31536000"
    </FilesMatch>
</Directory>

# Special rule for storage access
RewriteRule ^storage/(.*)\.(jpg|jpeg|png|gif|webp|svg)$ storage/$1.$2 [L]

# ======================================================
# üß∞ Add Strong Security Headers (no duplicates)
# ======================================================
<IfModule mod_headers.c>
    Header always unset X-Frame-Options
    Header set X-Frame-Options "SAMEORIGIN"

    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header unset X-Powered-By
    Header set Referrer-Policy "no-referrer-when-downgrade"
    Header set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self'; font-src 'self';"
</IfModule>

# ======================================================
# üß® Block Dangerous File Extensions (except images/docs)
# ======================================================
<FilesMatch "\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist|pem|key|env|gz|zip|rar)$">
    Require all denied
</FilesMatch>

# ======================================================
# ‚ö° Optional: Force HTTPS
# ======================================================
<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# ======================================================
# üßπ Disable Directory Browsing
# ======================================================
Options -Indexes
