# ======================================================
# üöÄ Laravel Public Directory .htaccess (Secure)
# ======================================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # ==================================================
    # üîÅ Redirect Trailing Slashes (except folders)
    # ==================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # ==================================================
    # üîê Pass Authorization Header (for API/Auth)
    # ==================================================
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ==================================================
    # üö¶ Route All Requests To index.php
    # ==================================================
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ======================================================
# üß± Block Access To Hidden Files (.env, .git, etc.)
# ======================================================
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# ======================================================
# üß® Block Dangerous Files
# ======================================================
<FilesMatch "\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist|pem|key|env|gz|zip|rar)$">
    Require all denied
</FilesMatch>

# ======================================================
# ‚úÖ Allow Images & Public Assets
# ======================================================
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|css|js|woff|woff2|ttf|eot|ico)$">
    Require all granted
</FilesMatch>

# ======================================================
# üßØ Disable PHP Execution in Storage & Cache
# ======================================================
<Directory "storage">
    Options +FollowSymLinks
    php_flag engine off
    Require all granted
</Directory>

<Directory "bootstrap/cache">
    Options +FollowSymLinks
    php_flag engine off
    Require all granted
</Directory>

# ======================================================
# üß∞ Security Headers
# ======================================================
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header always append X-Frame-Options SAMEORIGIN
    Header set X-XSS-Protection "1; mode=block"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    Header unset X-Powered-By
    Header set Content-Security-Policy "default-src 'self' https: data: 'unsafe-inline' 'unsafe-eval';"
</IfModule>

# ======================================================
# ‚ö° Force HTTPS
# ======================================================
<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# ======================================================
# üßπ Disable Directory Browsing
# ======================================================
Options -Indexes
